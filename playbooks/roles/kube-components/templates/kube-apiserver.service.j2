 [Unit]
 Description=Kubernetes API Server
 After=etcd.service
 Wants=etcd.service

 [Service]
 EnvironmentFile={{ K8S_CONF_DIR }}/kube-apiserver.conf
 ExecStart=/usr/local/bin/kube-apiserver $KUBE_APISERVER_OPTS
 Restart=on-failure
 RestartSec=5
 Type=notify
 LimitNOFILE=65536

 [Install]
 WantedBy=multi-user.target
